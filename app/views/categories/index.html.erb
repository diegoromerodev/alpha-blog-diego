<h1 class="text-center">All Categories</h1>

<div class="flickr_pagination mt-4">
	<%= will_paginate @categories, :container => false %>
</div>

<div class="container">
	<% @categories.each do |category| %>
	  <div class="row justify-content-md-center">
	    <div class="col-4 mt-4">
			<div class="card text-center shadow-lg mb-5 bg-white rounded">
				  <div class="card-header font-italic">
				    <h3><%= link_to category.name.capitalize, category_path(category) %></h3>
				    <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
				  </div>
				  <div class="card-footer text-muted">
				    <small>Created <%= time_ago_in_words(category.created_at) %> ago</small>
				  </div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>
