<div class="container big-menu-font">
  <nav class="navbar navbar-expand-lg navbar-light">
      <%= link_to 'Alpha-Blog', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto justify-content-end">
          <li class="nav-item">
            <%= link_to 'Bloggers', users_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Articles
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% if user_signed_in? %>
                <%= link_to 'New Article', new_article_path, class: "dropdown-item"  %>
              <% end %>
              <%= link_to 'All Articles', articles_path, class: "dropdown-item" %>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Categories
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% if user_signed_in? && current_user.admin? %>
                <%= link_to 'New Category', new_category_path, class: "dropdown-item"  %>
              <% end %>
              <%= link_to 'View Categories', categories_path, class: "dropdown-item" %>
            </div>
          </li>
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= "(Admin)" if current_user.admin? %> Profile
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to 'View Profile', user_path(current_user), class: "dropdown-item"  %>
                  <%= link_to 'Edit Profile', edit_user_path(current_user), class: "dropdown-item" %>
                  <%= link_to 'Logout', logout_path, method: :delete, class: "dropdown-item font-weight-bold" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to 'Delete Profile', edit_user_path(current_user), class: "dropdown-item text-danger font-weight-bold", method: :delete, data: {confirm: "Are you sure?"} %>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Login', login_path, class: "nav-link" %>
              </li>
            <% end %>
        </ul>
      </div>
  </nav>
</div>