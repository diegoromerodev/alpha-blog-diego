<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <%= render 'shared/alerts', obj: @user %>
        </div>
    </div>
    <%= form_with(model: @user, local:true) do |f| %>
    <div class="row justify-content-center shadow-lg p-3 mb-5 bg-white rounded">
        <div class="col-12">
            <div class="form-group">
                <%= f.label :username, class: "h4 font-weight-bold" %><br/>
                <%= f.text_field :name, class: "form-control shadow-sm rounded", placeholder: "Create an username" %>
            </div>
            <div class="form-group">
                <%= f.label :email, class: "h4 font-weight-bold" %><br/>
                <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter your email" %>
            </div>
            <div class="form-group">
                <%= f.label :password, class: "h4 font-weight-bold" %><br/>
                <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Choose a password" %>
            </div>
        </div>
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-info btn-lg mt-2 mb-2") %>
    </div>
    <% end %>
</div>