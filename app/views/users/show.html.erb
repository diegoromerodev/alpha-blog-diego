<%= gravatar_img @user, size: 200 %>

<h2 class="text-center font-italic font-weight-light">Posts by: <%= @user.name.capitalize %></h2>

<% if user_signed_in? && current_user == @user %>
	<div class="text-center mt-4">
		<%= link_to 'Edit user profile', edit_user_path(@user), class: "btn btn-lg btn-info" %>
	</div>
<% end %>

<div class="flickr_pagination mt-4">
	<%= will_paginate @articles, :container => false %>
</div>

