<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <%= render 'shared/alerts', obj: @article %>
        </div>
    </div>
    <%= form_with(model: @article, local:true) do |f| %>
    <div class="row justify-content-center shadow-lg p-3 mb-5 bg-white rounded">
        <div class="col-12">
            <div class="form-group">
                <%= f.label("Title", class: "h1 font-weight-bold") %><br/>
                <%= f.text_field("title", class: "form-control shadow-sm rounded", placeholder: "Title") %>
            </div>
            <div class="form-group">
                <%= f.label("Description", class: "h1 font-weight-bold") %><br/>
                <%= f.text_area("description", class: "form-control shadow-sm rounded", rows: 10, placeholder: "Description") %>
            </div>
        </div>
        <%= f.submit class: "btn btn-info btn-lg mt-2 mb-2" %>
    </div>
    <% end %>
</div>