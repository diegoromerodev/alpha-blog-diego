<h1>Create a new post!</h1>

<ul>
<% if @article.errors.any? %>
    <%= @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>
</ul>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
	<p>
    	<%= f.label("Title") %><br/>
    	<%= f.text_field("title") %>
    </p>
    <p>
    	<%= f.label("Description") %><br/>
    	<%= f.text_area("description") %>
    </p>
    <p>
    	<%= f.submit %>
    </p>
 <% end %>