<div class="container">
	<% @articles.each do |article| %>
	  <div class="row justify-content-md-center">
	    <div class="col-8 mt-4">
			<div class="card text-center shadow-lg mb-5 bg-white rounded">
				  <div class="card-header font-italic">
				    by <%= link_to article.user.name.capitalize, user_path(article.user) %>
				  </div>
				  <div class="card-body">
				    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-info" %></h5>
				    <p class="card-text"><%= truncate(article.description, length: 40) %></p>
				    <%= link_to 'View', article_path(article), class: "btn btn-outline-info" %>
				    <% if user_signed_in? && (article.user == current_user || current_user.admin?) %>
					    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-success" %>
					    <%= link_to 'Delete', article_path(article), method: :delete, class: "btn btn-outline-danger", data: {confirm: "Are you sure?"} %>
				    <% end %>
				  </div>
				  <div class="card-footer text-muted">
				    <small>Created <%= time_ago_in_words(article.created_at) %> ago,
				    	Updated <%= time_ago_in_words(article.updated_at) %> ago</small>
				  </div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>