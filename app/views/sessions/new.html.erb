
<div class="container" id="login-form">
    <h2 class="text-center font-italic font-weight-light mb-5">Login</h2>
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <div class="row justify-content-center shadow-lg p-3 mb-5 bg-white rounded">
        <div class="col-12">
            <div class="form-group">
                <%= f.label :email, class: "h4 font-weight-bold" %><br/>
                <%= f.email_field :email, class: "form-control shadow-sm rounded", placeholder: "Enter your email" %>
            </div>
            <div class="form-group">
                <%= f.label :password, class: "h4 font-weight-bold" %><br/>
                <%= f.password_field :password, class: "form-control shadow-sm rounded", placeholder: "Enter your password" %>
            </div>
        </div>
        <%= f.submit "Login", class: "btn btn-info btn-lg mt-2 mb-2" %>
    </div>
    <% end %>
</div>